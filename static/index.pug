doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
        table 
            tr  
                th Contract Code
                th City
                th Clinic
                th Client Name
                th Service
                th Specialist
            each val, index in result 
                tr 
                    td #{val.ContractCode} 
                    td #{val.CityName} 
                    td #{val.ClinicName} 
                    td #{val.ClientName} 
                    td #{val.ServiceName}
                    td #{val.SpecialistTypeDescription}
        a(href="http://localhost:3030/add") 
            input(type="button", name="add-button", value="Add New Record")
        a(href="http://localhost:3030/delete")
            input(type="button", name="delete-button", value="Delete Record")
        a(href="http://localhost:3030/manage")
            input(type="button", name="delete-button", value="Manage Parameters")
        
